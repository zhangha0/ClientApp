<?xml version="1.0" encoding="utf-8"?>
<!-- 借助shape元素绘制一些图形 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 绘制图形的颜色 -->
    <solid android:color="#ffffffff"/>
    <!-- 绘制边角弧度 -->
    <corners android:radius="20dp"/>
    <!-- 描边 -->
    <stroke android:color="#ffffffff" 
            android:width="1dp"/>
    <!-- 设定内边距 -->
    <padding android:left="10dp"
     android:top="0dp" 
     android:right="10dp" 
     android:bottom="0dp"/>
</shape>