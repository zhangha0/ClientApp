<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185px"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="125px"
            android:layout_height="125px"
            android:scaleType="fitXY"
            android:layout_margin="30px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30px"
            android:layout_marginBottom="30px">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:maxLines="1"
                android:textColor="#151515"
                android:layout_weight="1"
                android:textSize="30px"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/xinxin1"
                    android:layout_width="30px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2px"
                    android:visibility="gone"
                    android:src="@mipmap/xinxin" />

                <ImageView
                    android:id="@+id/xinxin2"
                    android:layout_width="30px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2px"
                    android:visibility="gone"
                    android:src="@mipmap/xinxin" />

                <ImageView
                    android:id="@+id/xinxin3"
                    android:layout_width="30px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2px"
                    android:visibility="gone"
                    android:src="@mipmap/xinxin" />

                <ImageView
                    android:id="@+id/xinxin4"
                    android:layout_width="30px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2px"
                    android:visibility="gone"
                    android:src="@mipmap/xinxin" />

                <ImageView
                    android:id="@+id/xinxin5"
                    android:layout_width="30px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2px"
                    android:visibility="gone"
                    android:src="@mipmap/xinxin" />

                <ImageView
                    android:id="@+id/xinxinhalf"
                    android:layout_width="30px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2px"
                    android:visibility="gone"
                    android:src="@mipmap/xinxinhalf" />

                <TextView
                    android:id="@+id/point"
                    android:layout_width="wrap_content"
                    android:textSize="28px"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/seldbymonth"
                    android:layout_marginLeft="20px"
                    android:textSize="28px"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0px"
                    android:textSize="28px"
                    android:id="@+id/startsendandsendmoney"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/km"
                    android:textSize="28px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="#e1dfdf"/>
</LinearLayout>