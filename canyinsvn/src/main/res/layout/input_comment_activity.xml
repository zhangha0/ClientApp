<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e0e0e0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25px">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_marginLeft="8px"
                    android:background="@drawable/border_1_0_black" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:layout_marginLeft="40px"
                    android:layout_toRightOf="@+id/icon"
                    android:gravity="center_vertical"
                    android:textColor="#151515"
                    android:textSize="28px" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="30px"
                android:text="@string/pointforsj"
                android:textColor="#151515"
                android:textSize="28px" />


            <LinearLayout
                android:layout_width="400px"
                android:layout_height="50px"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/xinxin1"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/xinxin2" />

                <ImageView
                    android:id="@+id/xinxin2"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/xinxin2" />

                <ImageView
                    android:id="@+id/xinxin3"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/xinxin2" />

                <ImageView
                    android:id="@+id/xinxin4"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/xinxin2" />

                <ImageView
                    android:id="@+id/xinxin5"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/xinxin2" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:layout_margin="30px"
                android:background="@drawable/border_1_0_black"
                android:padding="25px">

                <EditText
                    android:id="@+id/intput_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/intput_comment"
                    android:textSize="26px" />
            </RelativeLayout>

            <com.cd.wzjkj.canyi.view.SelfGridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40px"
                android:numColumns="4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e0e0e0" />

            <com.cd.wzjkj.canyi.view.SelfListView
                android:id="@+id/listview"
                android:layout_marginTop="15px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>