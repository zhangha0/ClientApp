<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="115px"
        android:background="#ececef">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6px"
            android:layout_marginTop="4px"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_sort1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/class_bustype"
                    android:textColor="#151515"
                    android:textSize="24px" />

                <ImageView
                    android:id="@+id/iv_sort1"
                    android:layout_width="20px"
                    android:layout_height="10px"
                    android:layout_marginLeft="5px"
                    android:src="@mipmap/hei_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_sort2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/class_city"
                    android:textColor="#151515"
                    android:textSize="24px" />

                <ImageView
                    android:id="@+id/iv_sort2"
                    android:layout_width="20px"
                    android:layout_height="10px"
                    android:layout_marginLeft="5px"
                    android:src="@mipmap/hei_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_sort3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/class_capacitysort"
                    android:textColor="#151515"
                    android:textSize="24px" />

                <ImageView
                    android:id="@+id/iv_sort3"
                    android:layout_width="20px"
                    android:layout_height="10px"
                    android:layout_marginLeft="5px"
                    android:src="@mipmap/hei_down" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:orientation="horizontal"
        android:background="#f2f2f2">

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="36px"
            android:text="@string/addressthis"
            android:textSize="24px" />

        <ImageView
            android:id="@+id/refershiv"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="36px"
            android:src="@mipmap/refershiv" />
    </LinearLayout>
</LinearLayout>