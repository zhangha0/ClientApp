<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <include layout="@layout/top_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/add_addrs_layout"
                android:id="@+id/add_addrs_layout"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e0e0e0" />

            <TextView
                android:id="@+id/title_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:textColor="#151515"
                android:textSize="30px" />

            <com.cd.wzjkj.canyi.view.SelfListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/all_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="20px"
                android:textColor="#ff0000"
                android:textSize="26px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e0e0e0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:text="@string/pay_choose"
                android:textColor="#151515"
                android:textSize="26px" />

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="20px"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="70px"
                    android:layout_height="70px">

                    <ImageView
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:background="@mipmap/pay1" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:text="@string/pay1" />

                <RadioButton
                    android:id="@+id/rbchoose1"
                    android:layout_width="48px"
                    android:layout_height="48px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/radiobutton_tc"
                    android:button="@null" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="20px"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="70px"
                    android:layout_height="70px">

                    <ImageView
                        android:layout_width="39px"
                        android:layout_height="28px"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/pay2" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:text="@string/pay2" />

                <TextView
                    android:id="@+id/rbchoose2"
                    android:layout_width="48px"
                    android:layout_height="48px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/radiobutton_tc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="20px"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="70px"
                    android:layout_height="70px">

                    <ImageView
                        android:layout_width="37px"
                        android:layout_height="39px"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/pay3" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:text="@string/pay3" />

                <RadioButton
                    android:id="@+id/rbchoose3"
                    android:layout_width="48px"
                    android:layout_height="48px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/radiobutton_tc"
                    android:button="@null" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30px"/>

            <TextView
                android:id="@+id/btn_tv"
                android:text="@string/pay"
                android:layout_margin="30px"
                android:layout_width="520px"
                android:textSize="32px"
                android:textColor="#151515"
                android:layout_height="88px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:background="@drawable/border_1_0_black"/>


        </LinearLayout>
    </ScrollView>


</LinearLayout>