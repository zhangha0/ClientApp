<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f3f3f3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="45px"
                    android:src="@mipmap/tophone"
                    android:layout_gravity="center_vertical"
                    android:layout_height="45px" />
                <TextView
                    android:id="@+id/tophone"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_gravity="center_vertical"
                    android:textSize="28px"
                    android:textColor="#151515"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="45px"
                    android:src="@mipmap/opentime"
                    android:layout_gravity="center_vertical"
                    android:layout_height="45px" />
                <TextView
                    android:id="@+id/opentime"
                    android:layout_width="match_parent"
                    android:textSize="28px"
                    android:layout_marginLeft="20px"
                    android:layout_gravity="center_vertical"
                    android:textColor="#151515"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="45px"
                    android:src="@mipmap/tomap"
                    android:id="@+id/tomap"
                    android:layout_gravity="center_vertical"
                    android:layout_height="45px" />
                <TextView
                    android:id="@+id/address"
                    android:layout_marginLeft="20px"
                    android:layout_width="match_parent"
                    android:textSize="28px"
                    android:layout_gravity="center_vertical"
                    android:textColor="#151515"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f3f3f3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/xinxin1"
                android:layout_width="30px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:src="@mipmap/xinxin"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/xinxin2"
                android:layout_width="30px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:src="@mipmap/xinxin"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/xinxin3"
                android:layout_width="30px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:src="@mipmap/xinxin"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/xinxin4"
                android:layout_width="30px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:src="@mipmap/xinxin"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/xinxin5"
                android:layout_width="30px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:src="@mipmap/xinxin"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/xinxinhalf"
                android:layout_width="30px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:src="@mipmap/xinxinhalf"
                android:visibility="gone" />
            <TextView
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="24px"
                android:gravity="center_vertical"
                android:textColor="#666666"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:textSize="24px"
                android:textColor="#666666"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:orientation="horizontal"
            android:padding="20px">

            <TextView
                android:id="@+id/good_comment"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:background="@drawable/whitegroud_goldbian_yuan"
                android:textColor="#ffa51d" />

            <TextView
                android:id="@+id/midle_comment"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:background="@drawable/whitegroud_goldbian_yuan"
                android:textColor="#ffa51d" />

            <TextView
                android:id="@+id/bad_comment"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:background="@drawable/whitegroud_goldbian_yuan"
                android:textColor="#ffa51d" />

            <TextView
                android:id="@+id/pic_comment"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:background="@drawable/whitegroud_goldbian_yuan"
                android:textColor="#ffa51d"  />
        </LinearLayout>
        <com.cd.wzjkj.canyi.view.SelfListView
            android:id="@+id/listview_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:listSelector="#00ffffff" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f3f3f3"/>
        <LinearLayout
            android:id="@+id/jubao"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:padding="20px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30px"
                android:textColor="#151515"
                android:text="@string/jubao_shangjia"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="40px"
                android:padding="13px"
                android:src="@mipmap/back_right"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>