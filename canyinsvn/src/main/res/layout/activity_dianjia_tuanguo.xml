<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cd.wzjkj.canyi.view.HeadZoomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="620px">

                <ImageView
                    android:id="@+id/icon_bg"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="520px"/>

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/icon"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="25px" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:id="@+id/back"
                        android:layout_width="80px"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20px"
                            android:layout_height="35px"
                            android:background="@mipmap/back" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="80px"
                        android:layout_height="match_parent"
                        android:gravity="center"></RelativeLayout>

                    <TextView
                        android:id="@+id/title_tuanguo"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" />

                    <RelativeLayout
                        android:id="@+id/shouchang"
                        android:layout_width="80px"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40px"
                            android:layout_height="40px"
                            android:background="@mipmap/good" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/share"
                        android:layout_width="80px"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40px"
                            android:layout_height="40px"
                            android:background="@mipmap/share" />
                    </RelativeLayout>

                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="30px"
                        android:gravity="center_vertical"
                        android:textColor="#151515"
                        android:textSize="36px" />
                    <TextView
                        android:id="@+id/time"
                        android:layout_marginLeft="20px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="#666666"
                        android:textSize="32px" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/tophone"
                    android:layout_width="80px"
                    android:layout_gravity="center_vertical"
                    android:layout_height="80px">

                    <ImageView
                        android:layout_width="45px"
                        android:layout_height="45px"
                        android:src="@mipmap/tophone"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal"
                android:paddingLeft="20px">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="#151515"
                    android:textSize="32px" />

                <RelativeLayout
                    android:id="@+id/tomap"
                    android:layout_width="80px"
                    android:layout_height="80px">

                    <ImageView
                        android:layout_width="45px"
                        android:layout_height="45px"
                        android:src="@mipmap/tomap"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_margin="20px"
                android:background="#f3f3f3" />
            <com.cd.wzjkj.canyi.view.SelfGridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_margin="20px"
                android:background="#f3f3f3" />
            <TextView
                android:layout_width="match_parent"
                android:layout_margin="30px"
                android:id="@+id/information"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/xinxin1"
                    android:layout_width="30px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:src="@mipmap/xinxin"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/xinxin2"
                    android:layout_width="30px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:src="@mipmap/xinxin"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/xinxin3"
                    android:layout_width="30px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:src="@mipmap/xinxin"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/xinxin4"
                    android:layout_width="30px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:src="@mipmap/xinxin"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/xinxin5"
                    android:layout_width="30px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:src="@mipmap/xinxin"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/xinxinhalf"
                    android:layout_width="30px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:src="@mipmap/xinxinhalf"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/point"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="24px"
                    android:gravity="center_vertical"
                    android:textColor="#666666"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:textSize="24px"
                    android:textColor="#666666"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:orientation="horizontal"
                android:paddingLeft="20px"
                android:paddingRight="20px">

                <TextView
                    android:id="@+id/good_comment"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="20px"
                    android:gravity="center"
                    android:background="@drawable/whitegroud_goldbian_yuan"
                    style="@style/black28"
                    android:text="好评(18)"/>

                <TextView
                    android:id="@+id/midle_comment"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="20px"
                    android:gravity="center"
                    android:background="@drawable/whitegroud_goldbian_yuan"
                    style="@style/black28"
                    android:text="中评(18)"/>

                <TextView
                    android:id="@+id/bad_comment"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="20px"
                    android:gravity="center"
                    android:background="@drawable/whitegroud_goldbian_yuan"
                    style="@style/black28"
                    android:text="差评(18)"/>

                <TextView
                    android:id="@+id/pic_comment"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="20px"
                    android:gravity="center"
                    android:background="@drawable/whitegroud_goldbian_yuan"
                    style="@style/black28"
                    android:text="有图(10)"/>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f3f3f3" />

            <TextView
                android:id="@+id/tuanguo_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:textColor="#000000"
                android:textSize="30px" />

            <com.cd.wzjkj.canyi.view.SelfListView
                android:id="@+id/listview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:listSelector="#00ffffff" />
        </LinearLayout>
    </com.cd.wzjkj.canyi.view.HeadZoomScrollView>


</FrameLayout>