<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="360px">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_gravity="bottom"
            android:layout_marginBottom="80px"
            android:gravity="center_vertical"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:textColor="#ffffff"
            android:textSize="36px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_gravity="bottom"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/address"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:textColor="#ffffff"
                android:textSize="26px" />

            <TextView
                android:id="@+id/km"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:textColor="#ffffff"
                android:textSize="26px" />
        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="vertical"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/title_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="30px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35px"
            android:layout_marginTop="10px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@mipmap/smalltuan" />

            <TextView
                android:id="@+id/price_red"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ff0000"
                android:textSize="26px" />

            <TextView
                android:id="@+id/price_black"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ababab"
                android:textSize="26px" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0"
        android:paddingLeft="20px"
        android:paddingRight="20px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <LinearLayout
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36px"
                android:layout_height="34px"
                android:src="@mipmap/share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="@string/sharetv"
                android:textColor="#e0e0e0"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/good"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="39px"
                android:layout_height="34px"
                android:src="@mipmap/good" />

            <TextView
                android:id="@+id/good_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#e0e0e0"
                android:textSize="30px" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#e0e0e0"></RelativeLayout>


</LinearLayout>